<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.danisharsalan.meetupmarker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lifting"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lifting"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Navigation"
            android:label="@string/title_activity_events" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".makeEvent"
            android:label="@string/title_activity_make_event"
            android:parentActivityName=".Navigation"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.danisharsalan.meetupmarker.Navigation" />
        </activity>
    </application>

</manifest>